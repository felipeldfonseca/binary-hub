{
  "name": "binary-hub-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Binary Hub",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src --ext .js,.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "serve:test": "firebase emulators:start --only auth,firestore,functions,storage",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.9.0",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "pdf-lib": "^1.17.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.13",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
